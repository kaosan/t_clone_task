<header class="header clearfix">
  <nav>
    <ul class="top_menu clearfix">
      <li><a><%= link_to "topへ", root_path %></a></li>
      <li><a><%= link_to "投稿一覧", messages_path %></a></li>
      <li><a><%= link_to '投稿画面へ', new_message_path %></a></li>
    </ul>
  </nav>
</header>


<%= form_with(model: @message, local: true, url: choose_new_or_edit) do |form| %>
<% if @message.errors.any? %>
<div id="error_explanation">
    <h2><%= @message.errors.count %>件のエラーがあります</h2>
    <ul>
        <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>
<h1>投稿画面</h1>
<br>

<div class="message_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
</div>
<br>
<%= form.submit "投稿する", :class => "button" %>
<% end %>

<footer class="footer">
  <p>twitter_clone_task</p>
</footer>
